extends layout

block content
  h1 All Contacts
  a(href='/contacts/new', class='btn btn-primary mb-2') Create New Contact
  table
    thead
      tr
        th First Name
        th Last Name
        th Email Address
        th Actions
    tbody
      each contact in contacts
        tr
          td= contact.firstName
          td= contact.lastName
          td= contact.emailAddress
          td
            a(href=`/contacts/${contact.id}`) View Details

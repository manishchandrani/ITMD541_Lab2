extends layout

block content
  div.container
    div.row.mb-8
      div.col-md-12.text-center
        h1 All Contacts
    div.row
      div.col-md-12.text-md-right
        a(href='/contacts/new', class='btn btn-primary mb-3') Create New Contact
    div.row
      div.col-md-12
        table.table.table-striped
          thead
            tr
              th First Name
              th Last Name
              th Email Address
              th Actions
          tbody
            each contact in contacts
              tr
                td= contact.firstName
                td= contact.lastName
                td= contact.emailAddress
                td
                  a.btn.btn-info(href=`/contacts/${contact.id}`) View Details

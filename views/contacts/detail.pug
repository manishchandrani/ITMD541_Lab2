extends layout

block content
  h1 Contact Details
  div
    p
      strong First Name:
      | #{contact.firstName}
    p
      strong Last Name:
      | #{contact.lastName}
    //- Display Email Address if available
    if contact.emailAddress
      p
        strong Email Address:
        | #{contact.emailAddress}
    //- Display Notes if available
    if contact.notes
      p
        strong Notes:
        | #{contact.notes}
    p
      strong Date Created/Modified:
      | #{contact.dateTime}

  // Form for deleting the contact
  form(action=`/contacts/${contact.id}/delete`, method='POST')
    button(type='submit', onclick="return confirm('Are you sure you want to delete this contact?')") Delete Contact

  // Link to navigate to the edit page
  a(href=`/contacts/${contact.id}/editpage`) Edit Contact

extends layout

block content
  div.container
    .row.justify-content-center.align-items-center.min-vh-100
      .col-md-8
        .card.mt-4
          .card-header.text-center
            h1 Contact Details
          .card-body
            table.table.table-bordered
              tbody
                tr
                  td
                    strong First Name
                  td #{contact.firstName}
                tr
                  td
                    strong Last Name
                  td #{contact.lastName}
                //- Display Email Address if available
                if contact.emailAddress
                  tr
                    td
                      strong Email Address
                    td #{contact.emailAddress}
                //- Display Notes if available
                if contact.notes
                  tr
                    td
                      strong Notes
                    td #{contact.notes}
                tr
                  td
                    strong Date Created/Modified
                  td #{contact.dateTime}
            .row
              .col-md-6
                form(action=`/contacts/${contact.id}/delete`, method='POST')
                  button.btn.btn-danger.btn-sm(type='submit', onclick="return confirm('Are you sure you want to delete this contact?')") Delete Contact
              .col-md-6.text-right
                a.btn.btn-primary.btn-sm(href=`/contacts/${contact.id}/editpage`) Edit Contact

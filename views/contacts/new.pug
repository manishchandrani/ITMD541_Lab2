extends layout

block content
  div.container-fluid
    div.row.justify-content-center.align-items-center.min-vh-100
      div.col-md-6
        div.card
          div.card-body
            h1.card-title.text-center.mb-4 New Contact            
            form(method='post', action='/contacts')
              .form-group
                label(for='firstName') First Name:
                input.form-control(type='text', name='firstName', required)
              //- Display errors for first name
              if errors
                ul.text-danger
                  each error in errors
                    if error.param === 'firstName'
                      li= error.msg
              .form-group
                label(for='lastName') Last Name:
                input.form-control(type='text', name='lastName', required)
              //- Display errors for last name
              if errors
                ul.text-danger
                  each error in errors
                    if error.param === 'lastName'
                      li= error.msg
              .form-group
                label(for='emailAddress') Email Address:
                input.form-control(name='emailAddress')              
              .form-group
                label(for='notes') Notes:
                textarea.form-control(name='notes')                
              button.btn.btn-primary.btn-block(type='submit') Save
